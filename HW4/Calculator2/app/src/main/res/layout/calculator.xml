<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/calculator_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#eeeeee"
        android:gravity="end|center_vertical"
        android:padding="24dp"
        android:textSize="36sp"
        android:textColor="#000000"
        android:hint="0"
        android:ellipsize="end"
        android:singleLine="true" />

    <Button
        android:id="@+id/button_seven"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_five"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="7" />

    <Button
        android:id="@+id/button_eight"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_five"
        android:layout_toEndOf="@id/button_seven"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="8" />

    <Button
        android:id="@+id/button_nine"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_five"
        android:layout_toEndOf="@id/button_eight"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="9" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_five"
        android:layout_toEndOf="@id/button_nine"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="/" />


    <Button
        android:id="@+id/button_four"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_one"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="4" />

    <Button
        android:id="@+id/button_five"

        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_one"
        android:layout_toEndOf="@id/button_four"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="5" />

    <Button
        android:id="@+id/button_six"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_one"
        android:layout_toEndOf="@id/button_five"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="6" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/button_six"
        android:layout_above="@id/button_one"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="x" />


    <Button
        android:id="@+id/button_one"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_add"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="1" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_add"
        android:layout_toEndOf="@id/button_one"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="2" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_add"
        android:layout_toEndOf="@id/button_two"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="3" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/button_three"
        android:layout_above="@id/button_add"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="-" />



    <Button
        android:id="@+id/button_AC"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="AC" />

    <Button
        android:id="@+id/button_zero"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/button_AC"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="0" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/button_zero"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="=" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/button_equals"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="+" />



</RelativeLayout>