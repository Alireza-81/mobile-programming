<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/top_left_black_bar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#000000"
        android:layout_toStartOf="@+id/spacing_1"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_above="@id/vertical_black_bar"/>

    <View
        android:id="@+id/spacing_1"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/vertical_black_bar"
        />

    <View
        android:id="@+id/top_right_black_bar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#000000"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/spacing_1"
        android:layout_above="@id/vertical_black_bar"/>

    <View
        android:id="@+id/vertical_black_bar"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:background="#000000"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"/>

    <View
        android:id="@+id/bottom_black_bar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#000000"
        android:layout_below="@+id/vertical_black_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>