<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/top_horizontal_black_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="-15dp"
        android:layout_toStartOf="@+id/center_vertical_space" />

    <View
        android:id="@+id/top_horizontal_black_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/center_vertical_space" />

    <View
        android:id="@+id/bottom_horizontal_black_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="-15dp"
        android:layout_toStartOf="@+id/center_vertical_space" />

    <View
        android:id="@+id/bottom_horizontal_black_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/center_vertical_space" />

    <View
        android:id="@+id/center_vertical_space"
        android:layout_width="50dp"
        android:layout_height="550dp"
        android:background="#000000"
        android:layout_centerInParent="true" />

</RelativeLayout>